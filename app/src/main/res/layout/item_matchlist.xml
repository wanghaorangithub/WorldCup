<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"

    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="5dp" />

    <RelativeLayout
        android:id="@+id/item_matchlist_relativelayout"
        android:layout_width="350dp"
        android:layout_height="106.7dp"
        android:background="@color/colorPrimary">

        <TextView
            android:id="@+id/matchlist_item_textview1"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="18.7dp"
            android:layout_marginTop="8.3dp"
            android:lineSpacingExtra="5sp"
            android:textColor="#000000"
            android:textSize="25sp"
            tools:text="德国：意大利" />

        <TextView
            android:id="@+id/matchlist_item_textview2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="244dp"
            android:layout_marginTop="8.3dp"
            android:lineSpacingExtra="5sp"
            android:textColor="#000000"
            android:textSize="25sp"
            tools:text="1 : 0" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="61.2dp"
            android:layout_marginBottom="45.5dp"
            android:background="#000000" />

        <TextView
            android:id="@+id/matchlist_item_textview3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="18.7dp"
            android:layout_marginTop="75dp"
            android:lineSpacingExtra="5.3sp"
            android:textColor="#000000"
            android:textSize="12sp"
            tools:text="比赛时间：xx月xx日xx时" />

        <LinearLayout
            android:layout_width="1dp"
            android:layout_height="20dp"
            android:layout_marginStart="225dp"
            android:layout_marginTop="75dp"
            android:background="#000000"
            android:orientation="vertical" />

        <TextView
            android:id="@+id/matchlist_item_textview4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="242dp"
            android:layout_marginTop="72.7dp"
            android:lineSpacingExtra="5.3sp"
            android:textColor="#000000"
            android:textSize="16.7sp"
            tools:text="小组赛 A组" />


    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="5dp" />
</LinearLayout>